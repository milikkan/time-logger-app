- if t.size > 0
  .callout.primary
    %table#time-entries-table
      %thead
        %tr
        %th Start
        %th End
        %th Duration (hh:mm)
        %th Comment
        %th Category
        %th{:colspan => "2"}
      %tbody>
        - t.each do |t_entry|
          %tr
            %td= display_time_entry(t_entry.start)
            %td= display_time_entry(t_entry.end)
            %td= convert_to_day_hour_minute(t_entry.end, t_entry.start)
            %td= t_entry.comment
            %td= show_category(Category.all, t_entry) 
            %td= link_to '', edit_time_entry_path(t_entry), class: "fa fa-edit fa-2x"
            %td= link_to '', t_entry, method: :delete, data: { confirm: 'Are you sure to delete this time entry?' }, class: "fa fa-trash fa-2x"
- else
  .callout.warning
    %p.text-center There is no time entry yet. Your time entries will be listed here.