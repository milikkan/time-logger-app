.top-bar
  .top-bar-left
    %ul.menu
      %li= link_to "TIME LOGGER", root_path, class: "menu-text"
      - if Current.user
        %li= link_to "My Time Logs", time_entries_path
        %li= link_to "Categories"
        - if Current.user.is_admin
          %li= link_to "Reports"
          %li= link_to "Users"
  .top-bar-right
    %ul.menu
      - if Current.user
        %li.menu-text
          = "Logged in as #{generate_title(Current.user)}"
        %li
          = button_to "Log out", logout_path, method: :delete, class: "button"
      - else
        %li
          = link_to "Sign Up", sign_up_path
        %li
          = link_to "Log In", sign_in_path