.top-bar
  .top-bar-left
    %ul.menu
      %li.menu-text Time Logger
      %li= link_to "Home", root_path
      %li= link_to "Users"
      %li= link_to "Categories"
      %li= link_to "Admin Reports"
  .top-bar-right
    %ul.menu
      - if Current.user
        %li
          %span= "Logged in as #{Current.user.email}"
        %li
          = button_to "Log out", logout_path, method: :delete, class: "button"
      - else
        %li
          = link_to "Sign Up", sign_up_path, class: "button"
        %li
          = link_to "Log In", sign_in_path, class: "button"